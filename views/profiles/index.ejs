<%- include('../partials/html-head') %>
<link rel="stylesheet" href="stylesheets/profiles.css">
<%- include('../partials/nav') %>

<main id="profile-index-main" class="golf-main-index">
  <h1>Public Profiles</h1>
  <p>*Please Login or create a profile to view individual profiles*</p>
  <div class="profile-container">
    
    <% profiles.forEach(profile => { %>
    <ul>
      <a href="/profiles/<%= profile._id %>">
        <li class="course-index-info">
          <p><%= profile.name %></p>
            <% if (profile.avatar) { %>
          <img 
            class="profile-icon"
            src="<%= profile.avatar %>"
            alt="<%= profile.name %>'s avatar"
            width="100%"
          />
            <% } else {%>
          <img 
          class="profile-icon"
          src="/images/icons/user.png"
          alt="A placeholder avatar"
          width="100%"
          />
            <% } %>
        </li>
      </a>
    </ul>
    <% }) %>
  </div>
</main>



<%- include('../partials/footer') %>
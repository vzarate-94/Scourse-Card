<%- include('../partials/html-head') %>

<link rel="stylesheet" href="stylesheets/profiles.css">

<%- include('../partials/nav') %>

<main class="bg-light">
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g5 g-sm-3 g-xxl-5 px-sm-5 px-4"
    >
      <% profiles.forEach(profile => { %>
        <div class="col">
          <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
            <div class="card shadow-sm">
              <% if (profile.avatar) { %>
                <img
                  class="card-img-top"
                  src="<%= profile.avatar %>"
                  alt="<%= profile.name %>'s avatar"
                  width="100%"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                />
              <% } %>
              
              
            </div>
          </a>
        </div>
        <p class="card-title fs-3 text-dark"><%= profile.name %></p>
      <% }) %>
    </div>
  </div>
</main>



<%- include('../partials/footer') %>
<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/stylesheets/style.css">
<%- include('../partials/nav') %>

<main id=golf_courses>
  <h1>Golf Courses</h1>
    <div><ol>
    <% courses.forEach(course => { %>
      <span><li id="course-index-info" ><%= course.courseName %></li></span>
      <a class="course-info" href="/courses/<%= course._id %>">Course Details<i class="fas fa-golf-ball"></i></a>
    </ol></div>
    <% }) %>
    <% if (user) { %>
  
  <div id=course_form>
    <h1>Enter a New Golf Course</h1>
    <form action="/courses" method="POST">
      <label>Golf Course Name:
      <input type="text" name="courseName">
      </label><br>
      <label>City:
      <input type="text" name="city">
      </label><br>
      <label>State:
      <input type="text" name="state">
      </label><br>
      <button type="submit">Add Golf Course</button>
    </form>
  </div>
    <% } %>
</main>
<%- include('../partials/footer') %>